@using ShoeShopProject.Models;
@{
    Admin admin = ViewBag.AdminHeader;
    Role role = ViewBag.RoleHeader;
}
<div id="layoutSidenav_nav">
    <nav class="sidenav shadow-right sidenav-light">
        <div class="sidenav-menu">
            <div class="nav accordion" id="accordionSidenav">
                <div class="sidenav-menu-heading">Thống kê</div>
                <a class="nav-link" href="@Url.Action("DashBoard", "AdminManage", new {startDate = DateTime.Now.AddMonths(-1), endDate = DateTime.Now})">
                    <div class="nav-link-icon"><i data-feather="home"></i></div>
                    Cửa hàng
                </a>

                <div class="sidenav-menu-heading">Quản lý</div>
                @if (role.Id == Constants.ROLE_ADMIN)
                {
                    <a class="nav-link collapsed" href="javascript:void(0);" data-bs-toggle="collapse" data-bs-target="#collapseAccount" aria-expanded="false" aria-controls="collapseAccount">
                        <div class="nav-link-icon"><i data-feather="users"></i></div>
                        Tài khoản
                        <div class="sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                    </a>
                    <div class="collapse" id="collapseAccount" data-bs-parent="#accordionSidenav">
                        <nav class="sidenav-menu-nested nav">
                            <a class="nav-link" href="@Url.Action("AdminAccountList", "AdminManage")">Danh sách tài khoản</a>
                            <a class="nav-link" href="@Url.Action("AddAdminAccount", "AdminManage")">Thêm tài khoản</a>
                        </nav>
                    </div>

                    <a class="nav-link collapsed" href="javascript:void(0);" data-bs-toggle="collapse" data-bs-target="#collapseProduct" aria-expanded="false" aria-controls="collapseProduct">
                        <div class="nav-link-icon"><i data-feather="shopping-bag"></i></div>
                        Sản phẩm
                        <div class="sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                    </a>
                    <div class="collapse" id="collapseProduct" data-bs-parent="#accordionSidenav">
                        <nav class="sidenav-menu-nested nav">
                            <a class="nav-link" href="@Url.Action("ProductManageList", "ProductManage")">Danh sách sản phẩm</a>
                            <a class="nav-link" href="@Url.Action("AddProductManage", "ProductManage")">Thêm sản phẩm</a>
                        </nav>
                    </div>
                }
                @if (role.Id == Constants.ROLE_SALE)
                {
                    <a class="nav-link collapsed" href="javascript:void(0);" data-bs-toggle="collapse" data-bs-target="#collapseOrder" aria-expanded="false" aria-controls="collapseOrder">
                        <div class="nav-link-icon"><i data-feather="shopping-cart"></i></div>
                        Đơn hàng
                        <div class="sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                    </a>
                    <div class="collapse" id="collapseOrder" data-bs-parent="#accordionSidenav">
                        <nav class="sidenav-menu-nested nav">
                            <a class="nav-link" href="@Url.Action("OrderManageList", "SaleManage")">Tất cả đơn hàng</a>
                            <a class="nav-link" href="@Url.Action("MeOrderManageList", "SaleManage")">Đơn hàng của tôi</a>
                        </nav>
                    </div>
                }

                <a class="nav-link collapsed" href="javascript:void(0);" data-bs-toggle="collapse" data-bs-target="#collapseSetting" aria-expanded="false" aria-controls="collapseSetting">
                    <div class="nav-link-icon"><i data-feather="settings"></i></div>
                    Hệ thống
                    <div class="sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                </a>
                <div class="collapse" id="collapseSetting" data-bs-parent="#accordionSidenav">
                    <nav class="sidenav-menu-nested nav">
                        @if (role.Id == Constants.ROLE_ADMIN)
                        {
                            <a class="nav-link" href="@Url.Action("PropertyManageList", "ProductManage")">Quản lý thành phần</a>
                            <a class="nav-link" href="@Url.Action("ContactManageList", "AdminManage")">Quản lý thanh toán</a>
                        }
                        <a class="nav-link" href="@Url.Action("SliderManageList", "ProductManage")">Quản lý liên hệ</a>
                    </nav>
                </div>


            </div>
        </div>
        <!-- Sidenav Footer-->
        <div class="sidenav-footer">
            <div class="sidenav-footer-content">
                <div class="sidenav-footer-subtitle">Đăng nhập bởi:</div>
                <div class="sidenav-footer-title">@admin.Fullname</div>
            </div>
        </div>
    </nav>
</div>